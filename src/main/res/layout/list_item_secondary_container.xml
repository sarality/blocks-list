<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/list_item_secondary_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="0.35"
    android:paddingBottom="@dimen/padding_list_item_text_vertical"
    android:paddingEnd="@dimen/padding_list_item"
    android:paddingLeft="@dimen/padding_list_item_content"
    android:paddingRight="@dimen/padding_list_item"
    android:paddingStart="@dimen/padding_list_item_content"
    android:paddingTop="@dimen/padding_list_item_text_vertical"
    tools:showIn="@layout/icon_list_item">

  <TextView
      android:id="@+id/list_item_received_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_gravity="end"
      android:textAlignment="textEnd"
      android:textColor="@android:color/black"
      android:textSize="@dimen/text_size_list_item_dense"/>


  <ImageView
      android:id="@+id/list_item_secondary_action"
      android:contentDescription="@null"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/list_item_received_time"
      android:gravity="center"
      android:focusable="false"
      android:focusableInTouchMode="false"/>
</RelativeLayout>


